pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/Naveen-paav/HTML_files.git'
            }
        }
        stage('Deploy to EC2') {
            steps {
                sshagent(['ec2-ssh']) {
                    sh '''
                    scp -o StrictHostKeyChecking=no index.html ec2-user@3.109.217.94:/var/www/html/
                    ssh ec2-user@3.109.217.94 "sudo systemctl restart nginx"
                    '''
                }
            }
        }
    }
}
