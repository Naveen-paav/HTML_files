pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/your-username/your-repo.git'
            }
        }
        stage('Deploy to EC2') {
            steps {
                sshagent(['ec2-ssh']) {
                    sh '''
                    scp -o StrictHostKeyChecking=no index.html ec2-user@<EC2-Public-IP>:/var/www/html/
                    ssh ec2-user@<EC2-Public-IP> "sudo systemctl restart nginx"
                    '''
                }
            }
        }
    }
}
